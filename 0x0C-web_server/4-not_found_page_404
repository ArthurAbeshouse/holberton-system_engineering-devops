#!/usr/bin/env bash
# Configures Nginx server to have custom 404
sudo apt-get update
sudo apt-get -y install nginx
echo "Holberton School" | sudo tee /var/www/html/index.html
sudo sed -i "/server_name arthurabeshouse.tech;\n\trewrite ^/redirect_me https://www.youtube.com/watch?v=QH2-TGUlwu4;" /etc/nginx/sites-available/default
echo "Ceci n'est pas une page" | sudo tee /var/www/html/404.html
sudo sed -i "/redirect_me;\n\terror_page 404 /404.html;" /etc/nginx/sites-available/default
sudo service nginx start
